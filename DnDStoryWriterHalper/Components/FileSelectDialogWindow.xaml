<Window x:Class="DnDStoryWriterHalper.Components.FileSelectDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDStoryWriterHalper.Components"
        mc:Ignorable="d"
        Title="FileSelectDialogWindow" Height="120" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Выберите файл" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox Grid.Column="1" Grid.Row="0" x:Name="filesCB" Margin="5"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Отмена" Margin="25 5 5 5" HorizontalAlignment="Left" Click="Cancel_Click"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Ок" Margin="5 5 25 5" HorizontalAlignment="Right" Click="OK_Click"/>
    </Grid>
</Window>
