<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:components="clr-namespace:DnDStoryWriterHalper.Components"
                    xmlns:models="clr-namespace:DnDStoryWriterHalper.Models">
    <DataTemplate x:Key="DirrectoryPageDataTemplate" DataType="{x:Type models:Dirrectory}">
        <ListView ItemsSource="{Binding Content}">
            <ListView.Template>
                <ControlTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </ControlTemplate>
            </ListView.Template>
        </ListView>
    </DataTemplate>
</ResourceDictionary>