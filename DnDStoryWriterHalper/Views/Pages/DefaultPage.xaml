<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">
    <DataTemplate x:Key="DefaultPageDataTemplate">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--<Label fontAwesome:ImageAwesome.FontAwesome="ExclamationTriangle" Foreground="Red" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            <Image Source="/logo.png" Grid.Row="1" Grid.Column="1" Opacity="0.5"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>